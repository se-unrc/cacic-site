<section class="page-title">
  <div class="container">
    <h2>Registro</h2>
    <ul class="list-inline">
      <li><a href="/">Home</a></li>
      <li><a href="#"><i class="fa fa-angle-right"></i> Registro</a></li>
    </ul><!-- /.list-inline -->
  </div><!-- /.container -->
